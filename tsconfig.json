{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "module": "ES2020",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types"
    ],
    "baseUrl": ".",
    "paths": {
      "main/*": [
        "./src/main/*"
      ],
      "renderer/*": [
        "./src/renderer/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES5",
      "module": "CommonJS",
      "esModuleInterop": true
    }
  }
}
